{
  "manifest_version": 3,
  "name": "Better Portal",
  "version": "1.2.4",
  "description": "Improvements to Geffen Academy Portal",
  "icons": {
    "16": "./img/icon16.png",
    "32": "./img/icon32.png",
    "48": "./img/icon48.png",
    "128": "./img/icon128.png",
    "512": "./img/icon.png"
  },
  
  "content_scripts": [
    {
      "matches": ["https://geffenacademy.myschoolapp.com/*"],
      "js": ["betterportal.js"],
      "all_frames": true
    }
  ],

  "browser_specific_settings": {
    "gecko": {
      "id": "better-portal@dannydivinsky",
      "strict_min_version": "58.0",
      "update_url": "https://danny.divinsky.com/api/betterportal/updates.json"
    }
  },

  "permissions": ["storage"],
  "action": {
    "default_title": "Better Portal",
    "default_popup": "./html/options.html"
  }
}
